@model IEnumerable<systmHotel.DAL.Entities.Client>

@{
    ViewData["Title"] = "Manage Clients";
}

<div class="container mt-4">
    <h1 class="text-center">Manage Clients</h1>

    <!-- Таблиця клієнтів -->
    <table class="table table-hover table-bordered mt-4">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.Name</td>
                    <td>@client.Surname</td>
                    <td>@client.Email</td>
                    <td>@client.PhoneNumber</td>
                    <td>
                        <div class="btn-group" role="group">
                            <!-- Кнопка редагування -->
                            <a asp-action="EditClient" asp-route-clientId="@client.ClientID" asp-route-adminId="@ViewBag.AdminID" class="btn btn-warning btn-sm">
                                Edit
                            </a>

                            <!-- Кнопка видалення -->
                            <a asp-action="DeleteClient" asp-route-clientId="@client.ClientID" asp-route-adminId="@ViewBag.AdminID" class="btn btn-danger btn-sm">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-3">
        <a asp-action="Dashboard" asp-route-adminId="@ViewBag.AdminID" class="btn btn-primary">Back to Dashboard</a>
    </div>
</div>
