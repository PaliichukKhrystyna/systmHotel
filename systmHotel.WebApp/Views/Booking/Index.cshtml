@model List<systmHotel.DAL.Entities.Booking>
    @{
    ViewData["Title"] = "Booking List";
    }

    <h2>Booking List</h2>
    <a class="btn btn-primary mb-3" asp-action="AddBooking">Add New Booking</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Client ID</th>
                <th>Room ID</th>
                <th>Booking Date</th>
                <th>Check-In Date</th>
                <th>Check-Out Date</th>
                <th>Total Amount</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingID</td>
                <td>@booking.ClientID</td>
                <td>@booking.RoomID</td>
                <td>@booking.BookingDate.ToShortDateString()</td>
                <td>@booking.CheckInDate.ToShortDateString()</td>
                <td>@booking.CheckOutDate.ToShortDateString()</td>
                <td>@booking.TotalAmount.ToString("C")</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@booking.BookingID">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="EditBooking" asp-route-id="@booking.BookingID">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteBooking" asp-route-id="@booking.BookingID">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
