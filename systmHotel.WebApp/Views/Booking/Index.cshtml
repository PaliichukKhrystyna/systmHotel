@model IEnumerable<systmHotel.DAL.Entities.Booking>

<h1>Bookings List</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Client ID</th>
            <th>Room ID</th>
            <th>Booking Date</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
                <tr>
                    <td>@booking.BookingID</td>
                    <td>@booking.ClientID</td>
                    <td>@booking.RoomID</td>
                    <td>@booking.BookingDate.ToShortDateString()</td>
                    <td>@booking.StartDate.ToShortDateString()</td>
                    <td>@booking.EndDate.ToShortDateString()</td>
                    <td>@booking.TotalAmount</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@booking.BookingID">Details</a> |
                        <a asp-action="EditBooking" asp-route-id="@booking.BookingID">Edit</a> |
                        <a asp-action="DeleteBooking" asp-route-id="@booking.BookingID">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>

<a asp-action="AddBooking">Add New Booking</a>
