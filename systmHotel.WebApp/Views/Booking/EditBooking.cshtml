@model systmHotel.DAL.Entities.Booking

<h1>Edit Booking</h1>

<form asp-action="EditBooking" method="post">
    <input type="hidden" asp-for="BookingID" />
    <div>
        <label asp-for="ClientID">Client ID:</label>
        <input asp-for="ClientID" />
    </div>
    <div>
        <label asp-for="RoomID">Room ID:</label>
        <input asp-for="RoomID" />
    </div>
    <div>
        <label asp-for="BookingDate">Booking Date:</label>
        <input asp-for="BookingDate" type="date" />
    </div>
    <div>
        <label asp-for="StartDate">Start Date:</label>
        <input asp-for="StartDate" type="date" />
    </div>
    <div>
        <label asp-for="EndDate">End Date:</label>
        <input asp-for="EndDate" type="date" />
    </div>
    <div>
        <label asp-for="TotalAmount">Total Amount:</label>
        <input asp-for="TotalAmount" type="number" step="0.01" />
    </div>
    <button type="submit">Save</button>
</form>
