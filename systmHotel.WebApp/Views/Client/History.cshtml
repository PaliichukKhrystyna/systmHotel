@model systmHotel.DAL.Entities.Client

@{
    ViewData["Title"] = "Booking History";
}

<div class="container mt-4">
    <div class="row">
        <div class="col text-center">
            <h1 class="mb-4">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h4>Client Details</h4>
            <p><strong>Name:</strong> @Model.Name @Model.Surname</p>
            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
            <p><strong>Email:</strong> @Model.Email</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <h4>Booking History</h4>

            @if (Model.Bookings != null && Model.Bookings.Any())
            {
                <table class="table table-hover table-striped table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Booking ID</th>
                            <th scope="col">Booking Date</th>
                            <th scope="col">Check-In Date</th>
                            <th scope="col">Check-Out Date</th>
                            <th scope="col">Room Number</th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.Bookings)
                        {
                            <tr>
                                <td>@booking.BookingID</td>
                                <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                                <td>@booking.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@booking.EndDate.ToString("yyyy-MM-dd")</td>
                                <td>@booking.Room</td>
                               @* <td>@booking.Price.ToString("C")</td>*@
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning text-center" role="alert">
                    No bookings found for this client.
                </div>
            }
        </div>
    </div>
</div>
