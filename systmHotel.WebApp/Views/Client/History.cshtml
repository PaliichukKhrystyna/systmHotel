@model IEnumerable<systmHotel.DAL.Entities.Client>

@{
    ViewData["Title"] = "Client History";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <p class="text-end">
        <a href="/Client/Create" class="btn btn-success">Create New</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Client ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Passport Number</th>
                <th>Password</th>
                <th>Password Secret</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ClientID</td>
                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.PassportNumber</td>
                    <td>@item.Password</td>
                    <td>@item.PasswordSecret</td>
                    <td>@item.Status</td>
                    <td>
                        <a href="/Client/Edit/@item.ClientID" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/Client/Details/@item.ClientID" class="btn btn-info btn-sm">Details</a>
                        <a href="/Client/Delete/@item.ClientID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
