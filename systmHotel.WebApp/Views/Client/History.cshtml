@model IEnumerable<systmHotel.DAL.Entities.Client>

@{
    ViewData["Title"] = "Client History";
}

<div class="container mt-4">
    <div class="row">
        <div class="col text-center">
            <h1 class="mb-4">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row">
        <div class="col text-end">
            <a href="/Client/Create" class="btn btn-success mb-3">Create New</a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col">
                <table class="table table-hover table-striped table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Client ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Surname</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Email</th>
                            <th scope="col">Passport Number</th>
                            <th scope="col">Status</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ClientID</td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.Email</td>
                                <td>@item.PassportNumber</td>
                                <td>@item.Status</td>
                                <td class="text-center">
                                    <a href="/Client/Edit/@item.ClientID" class="btn btn-primary btn-sm me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a href="/Client/Details/@item.ClientID" class="btn btn-info btn-sm me-1">
                                        <i class="bi bi-info-circle"></i> Details
                                    </a>
                                    <a href="/Client/Delete/@item.ClientID" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            No clients found.
        </div>
    }
</div>
