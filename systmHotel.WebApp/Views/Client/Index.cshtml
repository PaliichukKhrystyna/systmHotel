@model systmHotel.DAL.Entities.Client;


@{
    ViewData["Title"] = "Client Details";
}

<h2>Client Details</h2>

<div>
    <h3>Client Information</h3>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
</div>

<div>
    <h3>Last 10 Bookings</h3>

    @if (Model.Bookings.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Booking ID</th>
                    <th>Check-In Date</th>
                    <th>Check-Out Date</th>
                    <th>Room Number</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr>
                        <td></td>
                        <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No bookings available.</p>
    }
</div>

